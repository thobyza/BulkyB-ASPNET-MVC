@model Category

<form method="post" asp-action="DeletePost" class="container">
    <input asp-for="Id" hidden/>
    <div class="row align-items-center">
        <div class="col"></div>
        <div class="col rounded-3 border py-4 px-4 mt-4">
            <div class="row pb-2">
                <h3 class="text-primary">Delete Category</h3>
            </div>
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control mt-2" disabled/>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder">DisplayOrder</label>
                <input asp-for="DisplayOrder" class="form-control mt-2" disabled />
            </div>
            <div class="d-flex gap-2 pt-2">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary flex-grow-1">Back</a>
                <button type="submit" class="btn btn-danger flex-grow-1">Delete</button>
           </div>
        </div>
        <div class="col"></div>
    </div>
</form>

@* adding scripts with Razor syntax *@
@section Scripts{
    @{
        // adding partial view, the name should match the file name (see inside shared folder)
        // this is for client side validation 
        <partial name="_ValidationScriptsPartial"></partial>
    }
}