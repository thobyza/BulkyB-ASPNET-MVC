<!-- fetch data that is passed from the View in controller -->
@model IEnumerable<Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4 mb-3">
        <div class="col-6">
            <h2 class="text-primary fw-bold">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>
                <span>Add New</span>
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    DisplayOrder
                </th>
               <th>
                    Edit
                </th> 
                <th>
                    Delete
                </th> 
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model)
            {
                <tr>
                    <td style="width:40%">
                        @obj.Name
                    </td> 
                    <td style="width:10%">
                        @obj.DisplayOrder
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2 w-50">
                            <i class="bi bi-pencil-square me-1"></i>
                            <span>Edit</span>
                        </a>
                    </td>
                    <td>
                        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2 w-50">
                            <i class="bi bi-trash3-fill"></i>
                            <span>Delete</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>