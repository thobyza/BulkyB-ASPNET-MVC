@model Category

<form method="post" class="container">
    <div class="row align-items-center">
        <div class="col"></div>
        <div class="col rounded-3 border py-4 px-4 mt-4">
            <div class="row pb-2">
                <h3 class="text-primary">Create Category</h3>
            </div>
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control mt-2" />
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder">Display Order</label>
                <input asp-for="DisplayOrder" class="form-control mt-2" />
            </div>
            <div class="d-flex gap-2 pt-2">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary flex-grow-1">back</a>
                <button type="submit" class="btn btn-primary flex-grow-1">Submit</button>
           </div>
        </div>
        <div class="col"></div>
    </div>
</form>