@model Category

<form method="post" class="container">
    <div class="row align-items-center">
        <div class="col"></div>
        <div class="col rounded-3 border py-4 px-4 mt-4">
            <div class="row pb-2">
                <h3 class="text-primary">Create Category</h3>
            </div>
            <div asp-validation-summary="All"></div>
            <div class="mb-3">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control mt-2" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DisplayOrder">DisplayOrder</label>
                <input asp-for="DisplayOrder" class="form-control mt-2" />
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
            <div class="d-flex gap-2 pt-2">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary flex-grow-1">back</a>
                @* If you don't provide any name here for the submit, it will by default POST to the same action Name (of the view) (?)
                    , which is here the name of the GET controller (see controller),

                    if you want write it explicitly, you can add tag helper in the form tag
                    <form ... asp-action="Create" ... />
                *@
                <button type="submit" class="btn btn-primary flex-grow-1">Submit</button>
           </div>
        </div>
        <div class="col"></div>
    </div>
</form>

@* adding scripts with Razor syntax *@
@section Scripts{
    @{
        // adding partial view, the name should match the file name (see inside shared folder)
        // this is for client side validation 
        <partial name="_ValidationScriptsPartial"></partial>
    }
}
