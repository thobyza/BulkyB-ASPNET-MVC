@model Book

@{
    ViewData["Title"] = "Create";
}


<div class="container border rounded-3" style="width:max-content; margin-top:5vh; border-color:#ECECEC">
    <div class="border-bottom border-light py-2" style="width:100%">
        <span class="text-primary" style="font-size:22px; font-weight:600">Add a New Book</span>
    </div>
    <form method="post" class="d-flex flex-column mt-1" style="gap:0.5rem">
        @* <div asp-validation-summary="All"></div> *@
        <div class="">
            <label asp-for="Title" style="font-size:14px">Title</label>
            <input asp-for="Title" class="form-control mt-2" style="width:25vw; height:35px; font-size:14px" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="">
            <label asp-for="Author" style="font-size:14px">Author</label>
            <textarea asp-for="Author" class="form-control mt-2" style="width:25vw; height:35px; font-size:14px" ></textarea>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="">
            <label asp-for="Description" style="font-size:14px">Description</label>
            <input asp-for="Description" class="form-control mt-2" style="width:25vw; height:35px; font-size:14px" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="">
            <label asp-for="Price" style="font-size:14px">Price</label>
            <input asp-for="Price" type="number" class="form-control mt-2" style="width:25vw; height:35px; font-size:14px" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="d-flex justify-content-end align-items-center mt-2 py-2 border-top gap-2" style="border-color:#ECECEC">
            <a asp-controller="Book" asp-action="Index" class="btn btn-secondary">Back</a>
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>

</div>

