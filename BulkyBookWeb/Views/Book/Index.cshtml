@model IEnumerable<Book>

@{
    ViewData["Title"] = "Index";
}

<div class="d-flex justify-content-between align-items-center mt-3">
    <h3 class="mt-3 text-primary fw-bold">Book List</h3>
    <a asp-controller="Book" asp-action="Create" class="btn btn-outline-primary" style="height:max-content">
        Add New Book
    </a>
</div>

<div class="container row mt-3 gap-4">
    @foreach(var obj in Model)
    {
        <div class="col-3 d-flex flex-column bg-primary rounded-3 py-3 px-4">
           <span class="text-white fw-bold" style="font-size:26px">@obj.Title</span>
           <span class="text-white" style="font-weight:600">@obj.Author</span>
           <span class="text-light mt-2" style="font-size:14px">@obj.Description</span>
           <span class="mt-1 mb-3" style="color:#FFD662FF; font-size:16px; font-weight:600">
               Rp @obj.Price
           </span>
            <button class="btn btn-warning" style="width:max-content">
               Edit
           </button>
    </div>
    }
</div>